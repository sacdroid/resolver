<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <localRepository>target/auth-repository</localRepository>

    <servers>
        <server>
            <id>auth-repository</id>
            <username>shrinkwrap</username>
            <password>shrinkwrap</password>
        </server>
    </servers>


    <profiles>
        <profile>
            <id>auth-repository-test</id>

            <repositories>
                <repository>
                    <id>auth-repository</id>
                    <name>Auth-Jetty repository</name>
                    <url>http://localhost:12345</url>
                    <layout>default</layout>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                        <checksumPolicy>ignore</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                        <checksumPolicy>ignore</checksumPolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>auth-repository</id>
                    <name>Auth-Jetty repository</name>
                    <url>http://localhost:12345</url>
                    <releases>
                        <enabled>true</enabled>
                        <checksumPolicy>ignore</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <checksumPolicy>ignore</checksumPolicy>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>auth-repository-test</activeProfile>
    </activeProfiles>


</settings>